{
  "name": "paramatters.lib",
  "version": "0.0.1",
  "author": "Stefan Huber, Signalwerk GmbH",
  "license": "MIT",
  "description": "Library for parametric vector graphics",
  "main": "./src/index.js",
  "jsnext:main": "dist/lib.es6.js",
  "module": "dist/lib.es6.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/signalwerk/paramatters.lib"
  },
  "bugs": "https://github.com/signalwerk/paramatters.lib/issues",
  "keywords": [
    "parametric",
    "font",
    "design",
    "vectors"
  ],
  "scripts": {
    "prebuild": "npm run lint",
    "lint": "eslint src",
    "lint:tests": "eslint tests",
    "build": "rollup -c",
    "start": "npm run test:watch",
    "test:watch": "nodemon --watch src --watch tests --exec 'npm test'",
    "test": "mocha -r reify -r source-map-support/register tests/**/*.test.js",
    "test:watch:point": "nodemon --watch src --watch tests --exec 'npm run test:point'",
    "test:watch:contour": "nodemon --watch src --watch tests --exec 'npm run test:contour'",
    "test:point": "mocha -r reify -r source-map-support/register tests/Point/Point.test.js",
    "test:contour": "mocha -r reify -r source-map-support/register tests/Contour/Contour.test.js",
    "prepublishOnly": "npm run build && npm test",
    "test:browser": "npm run build && opn http://127.0.0.1:8080/tests/ && serve -p 8080"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "opn-cli": "^3.1.0",
    "reify": "^0.16.2",
    "rollup": "^0.61.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "serve": "^10.1.2",
    "source-map-support": "^0.5.6"
  },
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "chai-uuid": "^1.0.6"
  }
}
